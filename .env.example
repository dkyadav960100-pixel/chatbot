# GenAI Telegram Bot - Environment Variables Template
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED: Telegram Configuration
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# LLM Configuration (Primary: Ollama)
# ===========================================
# Ollama API URL (use http://ollama:11434 for Docker Compose)
OLLAMA_BASE_URL=http://localhost:11434

# Ollama model to use (must be pulled: ollama pull <model>)
# Recommended lightweight models: llama3.2:1b, phi3:mini, mistral:7b-instruct
OLLAMA_MODEL=llama3.2:1b

# ===========================================
# LLM Configuration (Fallback: OpenAI)
# ===========================================
# Optional: OpenAI API key for fallback when Ollama is unavailable
OPENAI_API_KEY=

# OpenAI model to use
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI base URL (for custom endpoints or Azure)
OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# Vision Configuration
# ===========================================
# Vision model: blip (recommended), blip2 (better but larger), git
VISION_MODEL=blip

# Device: cpu or cuda (for GPU)
DEVICE=cpu

# ===========================================
# RAG Configuration
# ===========================================
# Embedding model (sentence-transformers compatible)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Chunk settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Retrieval settings
TOP_K=3
SIMILARITY_THRESHOLD=0.3

# ===========================================
# Storage Paths (usually leave as default)
# ===========================================
KNOWLEDGE_BASE_PATH=./knowledge_base
VECTOR_STORE_PATH=./data/vector_store.db
CACHE_PATH=./data/cache.db

# ===========================================
# Application Settings
# ===========================================
# Enable debug mode (true/false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Session settings
SESSION_HISTORY_LENGTH=3
SESSION_TIMEOUT=3600

# ===========================================
# Webhook Mode (for production deployment)
# ===========================================
# Set this to your public HTTPS URL for webhook mode
# WEBHOOK_URL=https://your-domain.com/webhook

# Port for webhook server
# PORT=8443
